<!DOCTYPE html>
<html>
  <head>
    <title>PJapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <p class="navbar-brand">Electal</p>
          </div>
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><%= link_to " Your Account", user_path(current_user.id), class: "glyphicon glyphicon-user" %></li>
              <li><%= link_to " カテゴリー一覧", categories_path, class: "glyphicon glyphicon-th" %></li>
            <% else %>
              <li><%= link_to " Home", root_path, class: "glyphicon glyphicon-home" %> </li>
              <li><%= link_to " About", home_about_path, class: "glyphicon glyphicon-link" %></li>
              <li><%= link_to " カテゴリー一覧", categories_path, class: "glyphicon glyphicon-th" %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out itemsize" %></li>
            <% else %>
              <li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %></li>
              <li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <div class="container body">
          <%= yield %>
    </div>
  </body>
</html>
